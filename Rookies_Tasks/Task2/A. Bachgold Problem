import java.util.Scanner;

public class Main {
    public static void main(String[] args) {
        Scanner input = new Scanner(System.in);
        
        int n = input.nextInt();
        
       
        int k = n / 2;
        System.out.println(k);
        
        
        if (n % 2 == 0) {
           
            for (int i = 0; i < k; i++) {
                System.out.print("2 ");
            }
        } else {
            
            for (int i = 0; i < k - 1; i++) {
                System.out.print("2 ");
            }
            System.out.print("3");
        }
        
        
    }
}
